{
  "name": "telemetry-app",
  "version": "0.1.0",
  "description": "Multi-window telemetry monitoring application framework",
  "main": "src/main/main.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\" \"npm:dev:backend\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "dev:backend": "python3 backend/main.py",
    "build": "npm run clean && npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.company.telemetry-app",
    "productName": "Telemetry Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "dist/renderer/index.html",
      "backend/**/*",
      "node_modules/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/react-plotly.js": "^2.6.3",
    "@types/react-router-dom": "^5.3.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron-builder": "^24.6.1",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "electron": "^38.1.2",
    "electron-window-state": "^5.0.3",
    "plotly.js": "^2.35.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^6.18.0"
  }
}
